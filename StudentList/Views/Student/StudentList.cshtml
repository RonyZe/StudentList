<div class="row">
    <div class="col-lg-6">
        <div class="input-group">
            <label class="form-inline">SearchByDate:</label><input type="date" class="form-control" placeholder="Search for...">
        </div><!-- /input-group -->
    </div><!-- /.col-lg-6 -->
</div>
